@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Gaming Club</h1>
    <p class="lead">This website is to allow members of the club to sell in-game items between each other.</p>
</div>

    @if (User.Identity.IsAuthenticated)
    {
        <h1>
            Welcome @User.Identity.Name .
            <img src="@Url.Action("profilePictures", "Home" )" style="width:160px;height:160px; background: #FFFFFF;
                margin: auto;
                -moz-border-radius: 60px;
                border-radius: 100px;
                padding: 6px;
                box-shadow: 0px 0px 20px #888;" />
        </h1>
    }
    else
    {   
        <div class="row">
            <div class="col-md-4">
                <h2>Getting started?</h2>
                <p>You must Register, in order to sell and purchase items. Please click the button below to register</p>
                <p><a href="https://localhost:44300/Account/Register" class="btn btn-primary btn-lg">Register Now&raquo;</a></p>
            </div>
            <div class="col-md-4">
                <h2>Existing member?</h2>
                <p>Please login if you already have an account, to continue to use the site as usual.</p>
                <p><a href="https://localhost:44300/Account/Login" class="btn btn-primary btn-lg">Login Here&raquo;</a></p>
            </div>
            <div class="col-md-4">
                <h2>Need help?</h2>
                <p>If you have any questions, or are having issues when using this site please contact us!</p>
                <p><a href="https://localhost:44300/Home/Contact" class="btn btn-primary btn-lg">Contact Us&raquo;</a></p>
            </div>
        </div>
    }
